<section class="min-h-screen bg-gradient-to-br from-[#FFF1F2] to-[#F8FAFC]
                flex items-start justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-lg shadow-md p-8 border border-slate-200">
      <h2 class="text-3xl font-bold text-slate-900 text-center mb-6">Create account</h2>
      
      <%= button_to user_google_oauth2_omniauth_authorize_path, 
          method: :post,
          data: { turbo: false },
          class: "w-full flex items-center justify-center gap-3 px-6 py-3 border-2 border-slate-300 rounded-lg
                  hover:bg-slate-50 transition font-semibold text-slate-700 mb-4" do %>
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
          <path d="M19.8055 10.2292C19.8055 9.55056 19.7508 8.86667 19.6328 8.19556H10.2V12.0489H15.6014C15.3773 13.2911 14.6571 14.3898 13.6025 15.0867V17.5867H16.825C18.7172 15.8444 19.8055 13.2722 19.8055 10.2292Z" fill="#4285F4"/>
          <path d="M10.2 20C12.9562 20 15.2742 19.1044 16.8289 17.5867L13.6063 15.0867C12.7031 15.6956 11.5516 16.0422 10.2039 16.0422C7.54297 16.0422 5.2875 14.2833 4.48125 11.9167H1.16406V14.4922C2.75313 17.6583 6.29453 20 10.2 20Z" fill="#34A853"/>
          <path d="M4.47656 11.9167C4.06094 10.6744 4.06094 9.33111 4.47656 8.08889V5.51334H1.16406C-0.240625 8.30889 -0.240625 11.6967 1.16406 14.4922L4.47656 11.9167Z" fill="#FBBC04"/>
          <path d="M10.2 3.95778C11.6266 3.93556 13.0039 4.47111 14.0391 5.45778L16.8914 2.60556C15.1859 0.990004 12.9383 0.0822265 10.2 0.104448C6.29453 0.104448 2.75313 2.44611 1.16406 5.51334L4.47656 8.08889C5.27812 5.71778 7.53828 3.95778 10.2 3.95778Z" fill="#EA4335"/>
        </svg>
        Sign up with Google
      <% end %>
      <div class="relative my-6">
        <div class="absolute inset-0 flex items-center">
          <div class="w-full border-t border-slate-300"></div>
        </div>
        <div class="relative flex justify-center text-sm">
          <span class="px-4 bg-white text-slate-500">Or register with email</span>
        </div>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: true }) do |f| %>
        <div class="space-y-4">
          <div>
            <%= f.label :username, "Username", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <%= f.text_field :username, autofocus: true, autocomplete: "username",
                              placeholder: "johndoe",
                              class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:username].any? ? 'border-red-500' : 'border-slate-300'}
                                      focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                      focus:border-transparent text-slate-900" %>
            <% if resource.errors[:username].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:username].first %>
              </p>
            <% end %>
          </div>
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <%= f.email_field :email, autocomplete: "email",
                              placeholder: "you@example.com",
                              class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:email].any? ? 'border-red-500' : 'border-slate-300'}
                                      focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                      focus:border-transparent text-slate-900" %>
            <% if resource.errors[:email].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:email].first %>
              </p>
            <% end %>
          </div>
          <div>
            <%= f.label :password, "Password", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-slate-500 mb-2">Minimum <%= @minimum_password_length %> characters</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password",
                                class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:password].any? ? 'border-red-500' : 'border-slate-300'}
                                        focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                        focus:border-transparent text-slate-900" %>
            <% if resource.errors[:password].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:password].first %>
              </p>
            <% end %>
          </div>
          <div>
            <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:password_confirmation].any? ? 'border-red-500' : 'border-slate-300'}
                                        focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                        focus:border-transparent text-slate-900" %>
            <% if resource.errors[:password_confirmation].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:password_confirmation].first %>
              </p>
            <% end %>
          </div>
          <div class="pt-2">
            <%= f.submit "Create account", class: "w-full bg-[#B91C1C] text-white px-6 py-3 rounded-lg
                                                  font-semibold shadow-md hover:bg-[#991B1B]
                                                  transition cursor-pointer" %>
          </div>
        </div>
      <% end %>
      <div class="mt-6 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <p class="text-center text-sm text-slate-600 mt-6">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), 
          class: "font-semibold text-[#B91C1C] hover:text-[#991B1B]" %>
    </p>
  </div>
</section>