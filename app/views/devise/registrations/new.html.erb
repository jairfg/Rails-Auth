<section class="min-h-screen bg-gradient-to-br from-[#FFF1F2] to-[#F8FAFC]
                flex items-start justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-lg shadow-md p-8 border border-slate-200">
      <h2 class="text-3xl font-bold text-slate-900 text-center mb-6">Create account</h2>
      
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { novalidate: true }) do |f| %>
        <div class="space-y-4">
          <!-- Username Field -->
          <div>
            <%= f.label :username, "Username", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <%= f.text_field :username, autofocus: true, autocomplete: "username",
                              class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:username].any? ? 'border-red-500' : 'border-slate-300'}
                                      focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                      focus:border-transparent text-slate-900" %>
            <% if resource.errors[:username].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:username].first %>
              </p>
            <% end %>
          </div>

          <!-- Email Field -->
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <%= f.email_field :email, autocomplete: "email",
                              class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:email].any? ? 'border-red-500' : 'border-slate-300'}
                                      focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                      focus:border-transparent text-slate-900" %>
            <% if resource.errors[:email].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:email].first %>
              </p>
            <% end %>
          </div>

          <!-- Password Field -->
          <div>
            <%= f.label :password, "Password", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <% if @minimum_password_length %>
              <p class="text-xs text-slate-500 mb-2">Minimum <%= @minimum_password_length %> characters</p>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password",
                                class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:password].any? ? 'border-red-500' : 'border-slate-300'}
                                        focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                        focus:border-transparent text-slate-900" %>
            <% if resource.errors[:password].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:password].first %>
              </p>
            <% end %>
          </div>
          <!-- Password Confirmation Field -->
          <div>
            <%= f.label :password_confirmation, "Confirm password", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password",
                                class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:password_confirmation].any? ? 'border-red-500' : 'border-slate-300'}
                                        focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                                        focus:border-transparent text-slate-900" %>
            <% if resource.errors[:password_confirmation].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:password_confirmation].first %>
              </p>
            <% end %>
          </div>

          <div class="pt-2">
            <%= f.submit "Create account", class: "w-full bg-[#B91C1C] text-white px-6 py-3 rounded-lg
                                                  font-semibold shadow-md hover:bg-[#991B1B]
                                                  transition cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <p class="text-center text-sm text-slate-600 mt-6">
      Already have an account?
      <%= link_to "Sign in", new_session_path(resource_name), class: "font-semibold text-[#B91C1C] hover:text-[#991B1B]" %>
    </p>
  </div>
</section>