<!-- app/views/devise/sessions/new.html.erb -->
<section class="min-h-screen bg-gradient-to-br from-[#FFF1F2] to-[#F8FAFC]
                flex items-start justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-lg shadow-md p-8 border border-slate-200">
      <h2 class="text-3xl font-bold text-slate-900 text-center mb-6">
        Sign in
      </h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: true }) do |f| %>
        <div class="space-y-4">
          <!-- Login Field (Email or Username) -->
          <div>
            <%= f.label :login, "Email or Username",
              class: "block text-sm font-semibold text-slate-700 mb-2" %>

            <%= f.text_field :login,
              autofocus: true,
              autocomplete: "username",
              placeholder: "email@example.com or username",
              class: "w-full px-4 py-3 rounded-lg border border-slate-300
                      focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                      focus:border-transparent text-slate-900" %>
          </div>

          <!-- Password Field -->
          <div>
            <%= f.label :password, "Password",
              class: "block text-sm font-semibold text-slate-700 mb-2" %>

            <%= f.password_field :password,
              autocomplete: "current-password",
              class: "w-full px-4 py-3 rounded-lg border border-slate-300
                      focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                      focus:border-transparent text-slate-900" %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="flex items-center">
              <%= f.check_box :remember_me,
                class: "w-4 h-4 text-[#B91C1C] border-slate-300
                        rounded focus:ring-[#B91C1C]" %>

              <%= f.label :remember_me, "Remember me",
                class: "ml-2 text-sm text-slate-600" %>
            </div>
          <% end %>

          <div class="pt-2">
            <%= f.submit "Sign in",
              class: "w-full bg-[#B91C1C] text-white px-6 py-3 rounded-lg
                      font-semibold shadow-md hover:bg-[#991B1B]
                      transition cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>

    <p class="text-center text-sm text-slate-600 mt-6">
      Don't have an account?
      <%= link_to "Create one",
        new_registration_path(resource_name),
        class: "font-semibold text-[#B91C1C] hover:text-[#991B1B]" %>
    </p>
  </div>
</section>