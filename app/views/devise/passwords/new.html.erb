<section class="min-h-screen bg-gradient-to-br from-[#FFF1F2] to-[#F8FAFC]
                flex items-start justify-center py-12 px-4">
  <div class="max-w-md w-full">
    <div class="bg-white rounded-lg shadow-md p-8 border border-slate-200">
      <h2 class="text-3xl font-bold text-slate-900 text-center mb-2">
        Forgot password?
      </h2>
      <p class="text-sm text-slate-600 text-center mb-6">
        Enter your email and we'll send you a link to reset your password
      </p>

      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, novalidate: true }) do |f| %>
        <div class="space-y-4">
          <!-- Email Field -->
          <div>
            <%= f.label :email, "Email address", class: "block text-sm font-semibold text-slate-700 mb-2" %>
            <%= f.email_field :email, 
                autofocus: true, 
                autocomplete: "email",
                placeholder: "you@example.com",
                class: "w-full px-4 py-3 rounded-lg border #{resource.errors[:email].any? ? 'border-red-500' : 'border-slate-300'}
                        focus:outline-none focus:ring-2 focus:ring-[#B91C1C]
                        focus:border-transparent text-slate-900" %>
            <% if resource.errors[:email].any? %>
              <p class="mt-1 text-sm text-red-600 flex items-center gap-1">
                <i class="fa-solid fa-circle-exclamation"></i>
                <%= resource.errors[:email].first %>
              </p>
            <% end %>
          </div>

          <div class="pt-2">
            <%= f.submit "Send reset link", 
                class: "w-full bg-[#B91C1C] text-white px-6 py-3 rounded-lg
                        font-semibold shadow-md hover:bg-[#991B1B]
                        transition cursor-pointer" %>
          </div>
        </div>
      <% end %>

      <div class="mt-6 text-center text-sm">
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <p class="text-center text-sm text-slate-600 mt-6">
      Remember your password?
      <%= link_to "Sign in", new_session_path(resource_name), 
          class: "font-semibold text-[#B91C1C] hover:text-[#991B1B]" %>
    </p>
  </div>
</section>